<Window x:Class="CloudClient.Veiw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход / Авторизация" Height="600" Width="1050" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Background="#f4f4f4">

    <Grid Margin="16">
        
        <!-- Панель проводника -->
        <Grid x:Name="ExplorerPanel" Height="600">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                <Button Content="←" Width="30" Command="{Binding NavigateBackCommand}" />
                <TextBlock Text="Текущая директория:" VerticalAlignment="Center" Margin="8,0,4,0" />
                <TextBlock Text="{Binding CurrentPath}" VerticalAlignment="Center" FontWeight="Bold" />
            </StackPanel>

            
            <ListView Grid.Row="1" Grid.Column="0" ItemsSource="{Binding CurrentItems}"
                      SelectedItem="{Binding SelectedItem}" Margin="0,0,8,0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseDoubleClick" Handler="FileList_MouseDoubleClick" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="264" />
                        <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type}" Width="85" />
                        <GridViewColumn Header="Путь" DisplayMemberBinding="{Binding FullPath}" Width="460" />
                    </GridView>
                </ListView.View>
            </ListView>
            
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">
                <Button Content="Создать папку" Height="30" Margin="0,0,0,8" Command="{Binding CreateFolderButton}" />
                <Button Content="Загрузить файл" Height="30" Margin="0,0,0,8" Command="{Binding UploadFileCommand}" />
                <Button Content="Скачать файл" Height="30" Margin="0,0,0,8" Command="{Binding DownloadFileCommand}" />
                <Button Content="Переименовать" Height="30" Margin="0,0,0,8" Command="{Binding RenameCommand}" />
                <Button Content="Удалить" Height="30" Margin="0,0,0,8" Command="{Binding DeleteCommand}" />
                <Button Content="Копировать" Height="30" Margin="0,0,0,8" Command="{Binding CopyCommand}" />
                <Button Content="Выйти" Height="30" Command="{Binding ExitCommand}" />
            </StackPanel>
        </Grid>
        
        
    </Grid>

</Window>


