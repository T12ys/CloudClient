<Window x:Class="CloudClient.Veiw.LoginPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход / Авторизация" Height="600" Width="1050" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Background="#f4f4f4">

    <Grid Margin="16">

        <!-- Панель входа -->
        <StackPanel  VerticalAlignment="Top" Height="300"
                    Width="360">
            <TextBlock Text="Вход" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Text="Ник" />
            <TextBox x:Name="LoginNick" Margin="0,4,0,10" Text="{Binding UsernameLogin }" />

            <TextBlock Text="Пароль" />
            <PasswordBox x:Name="LoginPassword" Margin="0,4,0,16" PasswordChanged="LoginPassword_OnPasswordChanged" />

            <Button x:Name="LoginButton" Content="Войти" Height="30" Command="{Binding Login}" />

            <TextBlock Text="Авторизоваться"
                       Margin="0,16,0,0"
                       Foreground="Blue"
                       TextDecorations="Underline"
                       Cursor="Hand"
                       HorizontalAlignment="Center"
                       MouseLeftButtonUp="GoToRegister" />
        </StackPanel>
    </Grid>
</Window>