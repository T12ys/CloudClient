<Window x:Class="CloudClient.Veiw.RenamePanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переименовывание" Height="200" Width="360" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="#f4f4f4">
    <Grid Margin="16">
        <StackPanel  VerticalAlignment="Top" 
                     >
            <TextBlock Text="Переименовывание" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Text="Новое название" />
            <TextBox  Margin="0,5,0,10" Text="{Binding NewName}" />

            <Button  Content="Переименовать" Height="30" Command="{Binding Rename}"  Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>