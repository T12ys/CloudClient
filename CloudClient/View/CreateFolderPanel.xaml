<Window x:Class="CloudClient.Veiw.CreateFolderPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание новой папки" Height="300" Width="360" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Background="#f4f4f4">
    <Grid Margin="16">
        <StackPanel  VerticalAlignment="Top" 
                    Height="300"
                    Width="360">
            <TextBlock Text="Создание новой папки" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Text="Пароль" />
            <PasswordBox Margin="0,4,0,16"
                         PasswordChanged="CreateFolderPassword_OnPasswordChanged" />

            <TextBlock Text="Название папки" />
            <TextBox Margin="0,4,0,10" Text="{Binding FolderName}" />

            <Button  Content="Создать папку" Height="30" Command="{Binding CreateFolder}" />

        </StackPanel>
    </Grid>
</Window>