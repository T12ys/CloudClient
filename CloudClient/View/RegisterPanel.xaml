<Window x:Class="CloudClient.Veiw.RegisterPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход / Авторизация" Height="600" Width="1050" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Background="#f4f4f4">

    <Grid Margin="16">
        <StackPanel VerticalAlignment="Top"  Height="300"
                    Width="360">
            <TextBlock Text="Регистрация" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Text="Ник" />
            <TextBox  Margin="0,4,0,10" Text="{Binding Username}" />

            <TextBlock Text="Пароль" />
            <PasswordBox  Margin="0,4,0,10" PasswordChanged="RegistrPassword_OnPasswordChanged" />

            <TextBlock Text="Повторите пароль" />
            <PasswordBox  Margin="0,4,0,16"
                         PasswordChanged="RegistrPasswordCopy_OnPasswordChanged" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Авторизоваться"
                        Height="30" Width="130"
                        Margin="0,0,8,0"
                        Command="{Binding Register}" />
                <Button Content="Назад"
                        Height="30" Width="80"
                        Click="GoToLogin" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>